<div
  data-controller="uploaded-file"
  data-uploaded-file-file-picker-outlet=".file-picker"
  data-content-id="<%= @content_id %>"
  class="relative space-x-3 rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:border-gray-400"
>
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10 rounded-full">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
      </svg>
    </div>
    <div class="min-w-0 flex-1">
      <div class="focus:outline-none">
        <span aria-hidden="true" class="absolute inset-0"></span>
        <p class="text-sm font-medium text-gray-900"><%= @name %></p>
        <p class="truncate text-sm text-gray-500"><%= @file_type.match(/\/(.+)/)[1].upcase %> &middot; <%= number_to_human_size(@file_size) %></p>
      </div>
    </div>
    <div class="flex-shrink-0 z-10">
      <div class="flex">
        <%= button_tag data: { "uploaded-file-target": "open", action: "click->uploaded-file#open" }, class:"mr-4 cursor-pointer" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
          </svg>
        <% end %>
        <%= button_tag data: { "uploaded-file-target": "close", action: "click->uploaded-file#close" }, class:"mr-4 cursor-pointer hidden" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
          </svg>
        <% end %>
        <%= button_tag data: { "uploaded-file-target": "delete", action: "click->uploaded-file#delete" } , class:"cursor-pointer" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <div
    data-uploaded-file-target="form"
    class="grid grid-cols-1 mt-4 hidden"
  >
    <div class="sm:col-span-3 z-10">
      <%= label_tag :name, "Name", class:"block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= text_field_tag :name, @name, class:"block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>

    <div class="sm:col-span-3 z-10 mt-2">
      <%= label_tag :description, "Description", class:"block text-sm/6 font-medium text-gray-900" %>
      <div class="mt-2">
        <%= text_field_tag :description, @description, class:"block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>
  </div>
</div>