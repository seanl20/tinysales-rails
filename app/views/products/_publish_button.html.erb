<% if @product.published? %>
  <%= link_to "Unpublish", product_unpublish_path(product), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50", data: { "turbo-method": :put} %>
<% else %>
  <%= link_to "Publish", product_publish_path(product), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50", data: { "turbo-method": :put} %>
<% end %>